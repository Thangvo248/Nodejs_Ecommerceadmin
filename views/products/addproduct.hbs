<div class="container tm-mt-big tm-mb-big">
  <div class="row">
    <div class="col-xl-9 col-lg-10 col-md-12 col-sm-12 mx-auto">
      <div class="tm-bg-primary-dark tm-block tm-block-h-auto">
        <div class="row">
          <div class="col-12">
            <h2 class="tm-block-title d-inline-block">Thêm sản phẩm</h2>
          </div>
        </div>
        <div class="row tm-edit-product-row">
          <div class="col-xl-6 col-lg-6 col-md-12">
            <form method="POST" action="/products/add" enctype="multipart/form-data" class="tm-edit-product-form">
              <div class="form-group mb-3">
                <label for="name">Tên sản phẩm</label>
                <input id="name" name="name" type="text" class="form-control validate" required />
              </div>
              <div class="form-group mb-3">
                <label for="description">Mô tả</label>
                <textarea id="description" name="description" class="form-control validate" rows="3"
                  required></textarea>
              </div>
              <div class="form-group mb-3">
                <label for="detail">Thông tin chi tiết</label>
                <textarea id="detail" name="detail" class="form-control validate" rows="3" required></textarea>
              </div>
              <div class="form-group mb-3">
                <label for="product_type">Loại sản phẩm</label>
                <select class="custom-select tm-select-accounts" id="category" name="product_type">
                  <option value="null" selected>Chọn loại sản phẩm</option>
                  {{#each ProductTypes}}
                  <option value="{{this.name}}">{{this.name}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="form-group mb-3">
                <label for="color">Màu sản phẩm</label>
                <select class="custom-select tm-select-accounts" id="category" name="color">
                  <option value="null" selected>Chọn màu sản phẩm</option>
                  {{#each ProductColors}}
                  <option value="{{this.color}}">{{this.color}}</option>
                  {{/each}}
                </select>
              </div>
              <div class="row">
                <div class="form-group mb-3 col-xs-12 col-sm-6">
                  <label for="price">Giá sản phẩm
                  </label>
                  <input id="price" name="price" type="text" class="form-control validate" />
                </div>
                <div class="form-group mb-3 col-xs-12 col-sm-6">
                  <label for="inventory">Số lượng trong kho
                  </label>
                  <input id="inventory" name="inventory" type="text" class="form-control validate" required />
                </div>
              </div>

          </div>
          <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
            <div class="custom-file mt-3 mb-3">
              <label for="avatar_img" class="btn btn-primary btn-block text-uppercase">Tải ảnh sản phẩm lên</label>
              <input type="file" id="avatar_img" style="display:none" value="Tải ảnh sản phẩm lên" name="image_url" />
            </div>
          </div>
          <div class="col-12">
            <a href="">
              <button type="submit" class="btn btn-primary btn-block text-uppercase">Thêm sản phẩm</button>
            </a>
          </div>
          </form>
        </div>
      </div>
    </div>
  </div>
</div>